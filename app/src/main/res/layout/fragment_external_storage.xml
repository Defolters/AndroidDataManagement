<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ExternalStorageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/external_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public directory"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/external_public_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/external_public_create_file_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="create txt file" />

            <Button
                android:id="@+id/external_public_open_file_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="open file" />

            <Button
                android:id="@+id/external_public_delete_file_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete file" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private directory"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/external_private_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/external_private_create_file_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="create txt file" />

            <Button
                android:id="@+id/external_private_open_file_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="open file" />

            <Button
                android:id="@+id/external_private_delete_file_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete file" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>